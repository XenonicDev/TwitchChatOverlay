<Window x:Class="TwitchChatOverlay.Overlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TwitchChatOverlay"
        mc:Ignorable="d"
        Title="Twitch Chat Overlay" Height="450" Width="800" MinWidth="150" MinHeight="200" Topmost="True" Foreground="White" AllowsTransparency="True" WindowStyle="None">
    <Window.Background>
        <SolidColorBrush Opacity="0.0" Color="White"/>
    </Window.Background>
    <Grid>
        <TextBlock x:Name="TwitchChat" Margin="0,0,0,0" TextWrapping="Wrap" Text="Sample Text"/>
    </Grid>
</Window>
